SubDir TOP ;

# Decend into subdirs
SubInclude TOP tools miniswig ;
SubInclude TOP src ;
SubInclude TOP data ;

UseAutoconf ;

# add some additional files to package
Package INSTALL NEWS README COPYING AUTHORS ChangeLog ;

MakePot basest/locale/messages.pot : $(TRANSLATABLE_SOURCES) ;
XGETTEXT_FLAGS on basest/locale/messages.pot += --language=C++ ;

InstallPixmap data/images/supertux.png basest/images/supertux.xpm ;
InstallDesktop supertux.desktop ;
InstallDoc NEWS README COPYING AUTHORS ChangeLog ;
