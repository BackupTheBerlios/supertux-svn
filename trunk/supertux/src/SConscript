import os
Import('*')

supertux_src = Glob("*.cpp") \
             + Glob("object/*.cpp") \
             + Glob("badguy/*.cpp") \
             + Glob("trigger/*.cpp")
app = env.Program(
    target="supertux",
    source = supertux_src
)
AddPostAction(app, "ln -sf $TARGET .")
InstallExec(["supertux"])

Default(app)

